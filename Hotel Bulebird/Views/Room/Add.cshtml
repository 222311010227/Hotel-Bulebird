@model HotelBluebird.Models.Room
@{
    ViewBag.Title = "Add Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">➕ Add New Room</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Add", "Room", FormMethod.Post))
                    {
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.RoomNumber)
                            @Html.TextBoxFor(m => m.RoomNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RoomNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.RoomType)
                            @Html.TextBoxFor(m => m.RoomType, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.RoomType, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.Price)
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Add Room</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
